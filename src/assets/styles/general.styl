.main
	width 100%
	height 100%
	overflow hidden
	background-color #f2f2f2
	@media phone
		height auto
		overflow visible
.btn
	color #fff
	font-size 14px
	font-weight bold
	text-transform uppercase
	text-decoration none
	letter-spacing 2px
	padding 0 20px
	height 40px
	line-height 40px
	display inline-block
	cursor pointer
	border 0 none
	outline 0 !important
	background color = #a9bf46
	transition background .1s ease-in-out
	&:hover
		background darken(color, 10)
	&:active
		background darken(color, 20)

	&-default
		color #ffffff
		background color = #c6c6c6
		&:hover
			background darken(color, 10)
		&:active
			background darken(color, 20)
	&-block
		width 100%

.hidden
	display none
.visible
	display block !important
.form-group
	margin-bottom 20px
	@media tablet
		margin-bottom 10px