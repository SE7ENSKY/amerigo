::selection
	background-color rgba(0, 0, 0, 0.5)
	color #fff
::-moz-selection
	background-color rgba(0, 0, 0, 0.5)
	color #fff

*
	font-smoothing antialiased
	box-sizing border-box
	&:before
	&:after
		box-sizing border-box

html
body
	margin 0
	padding 0

html
	height 100%

body
	position relative
	min-height 100%
	font-family mainFont
	font-size 16px
	font-weight 100
	line-height 1.7
	color siteColor
	overflow-x hidden !important
	background-color #fff
	-webkit-tap-highlight-color transparent

[data-menuanchor]
	cursor pointer