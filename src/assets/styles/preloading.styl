/*---
cssmin: true
*/

.preloading
	img
		max-width 100% !important
	button, .pluginButton, .page-promo a
		display none
	*
		box-sizing border-box
.preloader
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 99999
	background #ffffff
	&__spinner
		width 40px
		height 40px
		position absolute
		top 50%
		left 50%
		margin-top -20px
		margin-left -20px
		border 5px solid #a9bf46
		animation loader 4s infinite ease
		&:after
			content " "
			vertical-align top
			display inline-block
			width 100%
			background-color #a9bf46
			animation loader-inner 4s infinite ease-in
@keyframes loader
	0%
		transform rotate(0deg)

	25%
		transform rotate(180deg)

	50%
		transform rotate(180deg)

	75%
		transform rotate(360deg)

	100%
		transform rotate(360deg)

@keyframes loader-inner
	0%
		height 0%

	25%
		height 0%

	50%
		height 100%

	75%
		height 100%

	100%
		height 0%