h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
	font-family headingFont
	&.style-heading
		position relative
		padding-bottom 20px
		text-align center
		&:after
			content " "
			position absolute
			bottom 0
			height 0
			border-width 2px 0 0
			border-style solid
			width 120px
			left 50%
			margin-left (@width / (-2))

h1, .h1
	font-size 65px
	margin 0 0 30px
	line-height 1.3
	@media phone 
		font-size 30px
		margin 0 0 25px
		line-height 1.2

h2, .h2
	font-size 50px
	margin 0 0 30px
	line-height 1.3
	@media phone 
		font-size 24px
		margin 0 0 15px
		line-height 1.2
h3, .h3
	font-size 18px
	color #404040
	margin 0 0 30px
	line-height 1.2
	letter-spacing .150em
	text-transform uppercase
h4, .h4
	font-size 30px
	margin 0 0 20px
	line-height 1.2
	@media phone 
		font-size 24px
		margin 0 0 15px
		line-height 1.1
h5, .h5
	font-size 28px
	margin 0 0 20px
	line-height 1.2
	@media phone 
		font-size 24px
		margin 0 0 15px
		line-height 1.1