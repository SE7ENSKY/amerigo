.btn
	display inline-block
	vertical-align middle
	padding 8px 30px
	border 1px solid #000
	font-family mainFont
	font-size 14px
	line-height 1.3
	text-transform uppercase
	color brandColor
	font-weight normal
	text-align center
	white-space nowrap
	background #fff
	cursor pointer
	outline none
	user-select none
	transition .2s background ease-in-out, .15s color ease-in-out, .15s box-shadow ease-in-out, .15s border-color ease-in-out
	&:hover
	&:active
		background brandColor
		color #fff
		border-color brandColor
	&:active
		box-shadow 0 3px 7px rgba(0,0,0,0.25) inset
	&:focus
		outline none
	a&
		text-decoration none
	&.disabled
	&[disabled]
		cursor not-allowed
		opacity .5
		pointer-events none