placeholderTrans()
	transition opacity .3s ease

.form-control
	display block
	width 100%
	height 36px
	padding 10px 0 5px
	font-family mainFont
	font-size 14px
	line-height 1.3
	color #252525
	border-width 0 0 1px
	border-style solid
	border-color #000
	border-radius 0
	background-color #fff
	transition border-color .3s ease
	outline none
	-webkit-appearance none
	&:focus
		border-color greenColor
	textarea&
		height auto
		resize vertical
		border-width 1px
		padding 10px
	&::-webkit-input-placeholder
		opacity 1
		placeholderTrans()
	&::-moz-placeholder
		opacity 1
		placeholderTrans()
	&:-moz-placeholder
		opacity 1
		placeholderTrans()
	&:-ms-input-placeholder
		opacity 1
		placeholderTrans()
	&:focus::-webkit-input-placeholder
		opacity 0
		placeholderTrans()
	&:focus::-moz-placeholder
		opacity 0
		placeholderTrans()
	&:focus:-moz-placeholder
		opacity 0
		placeholderTrans()
	&:focus:-ms-input-placeholder
		opacity 0
		placeholderTrans()
	& + .control-label
		position absolute
		top 8px
		left 0
	&:active
	&:focus
	&.has-value
		& + .control-label
			top -8px
			font-size 10px
			sup
				font-size 12px

.control-label
	font-size 12px
	text-transform uppercase
	color #939598
	transition top .1s ease-in-out, font-size .1s ease-in-out, color .1s ease-in-out
	sup
		top 0
		margin-left 2px
		font-size 14px
		color brandColor

fieldset
	padding 0
	margin 0
	border 0 none
	min-width 0

.form-group
	position relative
	margin-bottom 20px
