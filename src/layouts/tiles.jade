extends main

block main
	if file.visual
		+b("section").visual.section(data-anchor="visual" style="background-image: url('#{file.visual.image}');"): +i({ text: file.visual.text, arrowAnchor: "program-baccalaureate" })

	if file.sections
		each section in file.sections
			- classes = ""
			if section.contentPosition
				- classes = "info-card_text-" + section.contentPosition
			+b("section").info-card.section(class=classes data-anchor=section.program): +i({ image: section.image, title: section.title, subTitle: section.subTitle, text: section.text, anchorLabel: section.anchorLabel, anchorUrl: section.anchorUrl })



