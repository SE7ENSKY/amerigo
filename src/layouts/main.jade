extends root

block root
	+b.preloader: +i
	+b("header").header: +i
	
	main.main
		block main
			!= content
	
		+b("section").feedback.section: +i({ title: "get in touch", text: "Questions or inquiries can easily be sent to us <br>via email through the form submission below" })
	
	+b("footer").footer: +i

