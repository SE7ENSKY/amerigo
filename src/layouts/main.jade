extends root

block root
	+b("header").header Header
	
	main.main
		block main
			!= content
	
	+b("footer").footer Footer

block fonts
	link(href='http://fonts.googleapis.com/css?family=Fira+Sans:400,400italic|Roboto:400,700,400italic&subset=latin,cyrillic' rel='stylesheet' type='text/css')

block styles
	link(rel="icon" sizes="192x192" href=asset("i/app/app-icon-192x192.png"))
	link(rel="apple-touch-icon" href=asset("i/app/apple-touch-icon.png"))
	link(rel="apple-touch-icon" sizes="57x57" href=asset("i/app/apple-touch-icon-57x57.png"))
	link(rel="apple-touch-icon" sizes="72x72" href=asset("i/app/apple-touch-icon-72x72.png"))
	link(rel="apple-touch-icon" sizes="76x76" href=asset("i/app/apple-touch-icon-76x76.png"))
	link(rel="apple-touch-icon" sizes="114x114" href=asset("i/app/apple-touch-icon-114x114.png"))
	link(rel="apple-touch-icon" sizes="120x120" href=asset("i/app/apple-touch-icon-120x120.png"))
	link(rel="apple-touch-icon" sizes="144x144" href=asset("i/app/apple-touch-icon-144x144.png"))
	link(rel="apple-touch-icon" sizes="152x152" href=asset("i/app/apple-touch-icon-152x152.png"))

	link(rel="shortcut icon", href=asset("i/favicon.png?v=1"))
	link(rel="stylesheet", href=asset("amerigo.min.css"))

block scripts
	script(src=asset("jquery-1.11.0.min.js") defer)
	script(src=asset("amerigo.min.js") defer)
