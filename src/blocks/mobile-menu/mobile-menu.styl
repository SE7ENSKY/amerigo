.mobile-menu
	display none
	position fixed
	z-index 101
	top 7px
	right 10px
	@media phone_tablet
		display block
	&__block
		width 40px
		height 40px
		position relative
		transform rotate(0deg)
		transition 0.5s ease-in-out
		cursor pointer
		&.active
			.mobile-menu__line
				&:nth-child(1)
					top 18px
					opacity 0
				&:nth-child(2)
					transform rotate(45deg)
				&:nth-child(3)
					transform rotate(-45deg)
				&:nth-child(4)
					top 18px
					opacity 0
	&__line
		display block
		position absolute
		height 3px
		width 30px
		background-color brandColor
		opacity 1
		left 50%
		margin-left -(@width / 2)
		transform rotate(0deg)
		transition .2s top ease-in-out, .2s transform ease-in-out, .2s opacity ease-in-out
		&:nth-child(1)
			top 9px
		&:nth-child(2)
		&:nth-child(3)
			top 18px
		&:nth-child(4)
			top 27px

.mobile-submenu
	display none
	position absolute
	top 55px
	left 0
	right 0
	height 100vh
	overflow-y auto
	background-color #fff
	transform-origin 100% 0
	-webkit-overflow-scrolling touch
	&.active
		display block
	.nav
		&-menu
			list-style none
			margin 60px 0 0
			padding 0
			text-align center
			li
				text-transform uppercase
				margin-bottom 30px
				&:last-child
					margin-bottom 0
			&__item-link
				font-size 20px
				font-weight 500
				text-decoration none
		&-sub-menu
			list-style none
			margin 0
			padding 0
			text-align center
			li
				margin 0
				text-transform none
			&__item-link
				text-decoration none