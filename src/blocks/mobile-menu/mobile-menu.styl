.mobile-menu
	display none
	position absolute
	top 55px
	left 0
	right 0
	height 100vh
	width 100%
	z-index 100
	content: 'viewport-units-buggyfill;height:100vh;';
	overflow-y auto
	background-color #fff
	transform-origin 100% 0
	-webkit-overflow-scrolling touch
	&.active
		display block
	&__section
		text-align center
		margin-bottom 30px
		&-title
			display block
			font-size 20px
			font-weight 500
			text-transform uppercase
			text-decoration none
	&__address
		display inline-block
		& a
			text-decoration none
	&__language
		list-style none
		margin 0
		padding 0
		text-align center
		&-link
			text-decoration none
	.nav
		&-menu
			list-style none
			margin 60px 0 0
			padding 0
			text-align center
			li
				text-transform uppercase
				margin-bottom 30px
			&__item-link
				font-size 20px
				font-weight 500
				text-decoration none
		&-sub-menu
			list-style none
			margin 0
			padding 0
			text-align center
			li
				margin 0
				text-transform none
			&__item-link
				text-decoration none