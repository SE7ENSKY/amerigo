.mobile-menu
	display none
	position fixed
	z-index 100
	top 0
	left 0
	right 0
	height 100vh
	padding 70px 0 50px
	background-color #fff
	transform-origin top 0
	overflow-y auto
	-webkit-overflow-scrolling touch
	content 'viewport-units-buggyfill;height:100vh;'
	&__section
		text-align center
		margin-bottom 30px
		&:last-child
			margin-bottom 0
		&-title
			display block
			font-size 20px
			font-weight 500
			text-transform uppercase
			text-decoration none
	&__address
		display inline-block
		& a
			text-decoration none
	&__language
		list-style none
		margin 0
		padding 0
		text-align center
		&-link
			text-decoration none
	.nav
		&-menu
			margin 0
			padding 0
			list-style none
			text-align center
			&__item
				text-transform uppercase
				margin-bottom 30px
				&:last-child
					margin-bottom 0
				&-link
					font-size 20px
					font-weight 500
					text-decoration none
		&-sub-menu
			list-style none
			margin 0
			padding 0
			text-align center
			li
				margin 0
				text-transform none
			&__item-link
				text-decoration none