.history
	position relative
	&__image
		float right
		margin -80px 0 0 0
		width 460px
		height 300px
		background-position center
		background-size cover
		@media tablet
			width 360px
			height 250px
			margin -40px 0 0 0
		@media phone
			float none
			width 100%
			margin 0 0 25px 0

	&__name
		@media phone
			margin 0 0 25px 0
	&__body
		padding-left 50px
		padding-right 50px


	&__name
		font-family nobel
		font-size 17px
		text-transform uppercase
		color brandColor
		margin-top 10px
		padding-right 500px
		@media phone
			padding 0
	&__body
		background brandColor
		color white
		margin-top 20px
		padding-top 30px
		padding-bottom 30px
		max-width 80%
		@media phone
			max-width 100%
			margin 0
			padding 15px
	&__title
		font-size 36px
		font-family bodoni
		letter-spacing 0.1em
		margin-bottom 20px
	&__text
		font-family nobel
		font-size 14px
		font-weight 600
		letter-spacing -0.03em
		p
			margin-bottom 7px
	.container
		@media phone
			padding 0 10px


