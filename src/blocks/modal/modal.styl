.modal
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 1001
	opacity 0
	transition opacity .5s linear
	&_state
		&_opening
			opacity 1
		&_opened
			opacity 1
		&_closing
			opacity 0

+prefix-classes('modal__')
	.bg
		position absolute
		width 100%
		height 100%
		background-color rgba(241,241,241,.96)
		z-index -1
	.header
		position relative
		height 95px
		display flex
		justify-content center
		align-items center
	.content
		margin 30px auto
		overflow-y scroll

	.close
		cursor pointer
		position absolute
		top 50%
		left 20px
		margin-top -11px
		icon 64
		>span
			margin-left 12px
			dotted(.4)
	.title
		text-transform uppercase
		text-align center
		font-weight bold
		font-size 18px
		letter-spacing 0.1em


