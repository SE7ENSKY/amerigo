.main-menu
	list-style none
	margin 0
	padding 0
	display inline-block
	white-space nowrap
	&__item
		display inline-block
		margin-left 30%
		font-size 14px
		font-weight normal
		@media sm
			margin-left 20%
		&:first-child
			margin-left 0
		&-link
			color #979797
			text-decoration none
			&:hover
				color #757575
			&:active
				color #3f3f3f
			.main-menu__item.active &
				color #3f3f3f !important
				font-weight bold