.main-menu
	margin 0
	padding 0
	list-style none
	&__item
		float left
		padding-right 20px
		&:last-child
			padding-right 0
		&-link
			display block
			position relative
			z-index 2
			padding 14px 0
			font-size 11px
			text-transform uppercase
			text-decoration none	
		&:hover
			z-index 3
		&.active
			z-index 2
		&.active
		&:hover
			.main-sub-wrap
				transform scaleY(1)
		&.active &-link
			color brandColor

		&-has_sub
			&.active
			&:hover
				.main-menu__item-link:after
					opacity 1
			.main-menu__item-link
				&:after
					content ""
					position absolute
					top 100%
					left 50%
					width 0
					height 0
					border-style solid
					border-width 4px 5px
					border-color #fff transparent transparent
					opacity 0
					transition .2s opacity ease-in-out
					z-index 20
		&:nth-child(1) .main-sub-menu
			padding-right 300px
		&:nth-child(2) .main-sub-menu
			padding-right 110px
		&:nth-child(3) .main-sub-menu
			padding-right 50px
	.main-sub
		&-wrap
			position absolute
			z-index 1
			top 100%
			left 0
			right 0
			height 30px
			background-color greyColor
			transform scaleY(0)
			transform-origin center top
			transition .2s transform ease-in-out, .2s opacity ease-in-out
		&-menu
			margin 0 -10px
			padding 0
			list-style none
			text-align right
			&__item
				display inline-block
				vertical-align top
				&.active .main-sub-menu__item-link
					color #fff
				&-link
					display block
					padding 6px 10px
					font-size 11px
					color #000
					text-decoration none
					&:hover
						color #fff