.visual
	display block
	height 100vh
	background-color greyColor
	&_text
		&-left-bottom
			.fp-tableCell
				vertical-align bottom
		&-light
			.visual__text
				color #fff
		&-dark
			.visual__text
				color #000
	&__text
		font-family bodoni
		font-size 40px
		line-height 1.5
		color brandColor
		@media desktop
			width 80%
		@media phone
			font-size 20px
	&__inner
		&.container
			padding-top 110px
			padding-bottom 60px
			@media phone
				padding-top 60px
				padding-bottom 60px
