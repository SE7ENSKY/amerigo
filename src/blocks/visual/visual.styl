.visual
	display block
	height 100vh
	background-color greyColor
	&_text
		&-left-bottom
			.fp-tableCell
				vertical-align bottom
		&-light
			.visual__text
				color #fff
		&-dark
			.visual__text
				color #000
	&__text
		width 80%
		font-family bodoni
		font-size 40px
		line-height 1.5
		color brandColor
	&__inner
		&.container
			padding 110px 0 60px
			@media tablet
				padding 110px 0 60px 20px

