if mobileImage
	+e.img(style="background-image: url('#{mobileImage}');")
+e.inner.container
	+e.text
		if title
			+e.title!= title
		+e.body!= text
if arrowAnchor
	- var classes = ""
	if arrowColor
		- classes = "section-arrow_" + arrowColor
	a.section-arrow(class=classes, data-menuanchor=arrowAnchor)