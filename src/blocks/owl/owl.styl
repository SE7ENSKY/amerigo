.owl
	&-carousel
		padding 0 20px 32px
	&-prev
	&-next
		position absolute
		top 33%
		font-size 27px
		color #c7c7c7
		opacity 1
		transition opacity .2s linear, transform .2s ease-in-out
		&:hover
			color #272727
		&:active
			color #a9bf46
		&.disabled
			opacity 0
			transform matrix(.3,0,0,.3,0,0)
			cursor default !important
	&-prev
		left -3px
		icon e613
	&-next
		right -3px
		icon e616
	&-pagination
		position absolute
		bottom 0
		left 0
		right 0
		text-align center
		.jumbotron_nav &
			bottom -180px
	&-page
		display inline-block
		padding 5px
		size = 10px
		width size + ( @padding * 2 ) 
		height @width
		line-height size
		span
			display inline-block
			width 0
			height 0
			border-radius 50%
			border (size / 2) solid #d9d9d9
		&:hover span
			border-color #cacaca
		&:active span
			border-color #b6b6b6
		&.active span
			border-color #a9bf46
	&-jumbotron
		padding 0
		margin-bottom 30px
		.owl
			&-prev
			&-next
				top 0
				font-size 25px
				margin-top -19px
	&-jumbotron-nav
		padding-bottom 66px
		margin-bottom 30px
		.owl
			&-prev
			&-next
				top 0
				font-size 25px
				margin-top -50px
	&-jumbotron
	&-jumbotron-nav
		.owl
			&-controls
				position absolute
				left 0
				top 50%
				right 0
				bottom 50%
			&-prev
				right 100%
				left auto
				icon 61
				transform matrix(1,0,0,1,10,0)
				&:hover
					transform matrix(1,0,0,1,-5,0)
				&.disabled
					transform matrix(.3,0,0,.3,10,0)
			&-next
				left 100%
				right auto
				icon 62
				transform matrix(1,0,0,1,-10,0)
				&:hover
					transform matrix(1,0,0,1,5,0)
				&.disabled
					transform matrix(.3,0,0,.3,-10,0)

	.cart-extended &
		&-wrapper-outer
			&:after
			&:before
				content " "
				top 0
				bottom 0
				width 5px
				background #fff	
				position absolute
				z-index	2
			&:before
				left 0
			&:after
				right 0
				
		&-item +.owl-item:after
			content " "
			left 0
			top 10px
			bottom 10px
			width 1px
			background #d0d0d0	
			position absolute