.footer
	background-color #ececeb
	.fp-tableCell > .container
	> .container
		padding-top 35px
		padding-bottom 35px
	&__inner
		width 100%
		display inline-flex
		justify-content space-around
	&__menu
		flex 3
		margin 0
		padding 0
		list-style none
		font-size 13px
		&-item
			float left
			width 33.333%
		&-link
			display block
			margin-bottom 5px
			text-transform uppercase
			font-weight normal
			text-decoration none
		&-sub
			margin 0
			padding 0
			list-style none
			&-item
				margin-bottom 5px
				&:last-child
					margin-bottom 0
			&-link
				text-decoration none
	&__section
		flex 1
		&:last-child
			flex none
		&-title
			margin-bottom 5px
			font-size 13px
			text-transform uppercase
			font-weight normal
	&__language
		margin 0
		padding 0
		list-style none
		font-size 13px
		&-item
			margin-bottom 5px
			&:last-child
				margin-bottom 0
		&-link
			text-decoration none
	&__address
		font-size 13px
		line-height 1.95
		a
			text-decoration none
	&__socials
		margin-top 5px