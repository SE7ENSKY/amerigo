.header
	position fixed
	z-index 150
	top 0
	left 0
	right 0
	height 60px
	background-color #fff
	@media phone
		position fixed
		height 55px
	&:before
		content ''
		display none
		position absolute
		top 100%
		left 0
		right 0
		height 30px
		background-color greyColor
	&.active:before
		display block
		@media phone_tablet
			display none
	&__logo
		position absolute
		top 0
		left 50%
		width 80px
		transform translate(-50%, -10px)
		transition .3s transform ease-in-out
		&:hover
			@media desktop
				transform translate(-50%, 0)
	&__menu
		float right
		margin-top 18px
		@media phone_tablet
			display none
		&-toggle
			display none
			position relative
			float right
			margin-top 11px
			width 40px
			height 40px
			transform rotate(0deg)
			transition .5s ease-in-out
			cursor pointer
			@media phone_tablet
				display block
			@media phone
				margin-top 7px
			&.active
				.header__menu-toggle-line
					&:nth-child(1)
						top 18px
						opacity 0
					&:nth-child(2)
						transform rotate(45deg)
					&:nth-child(3)
						transform rotate(-45deg)
					&:nth-child(4)
						top 18px
						opacity 0
			&-line
				display block
				position absolute
				height 2px
				width 26px
				background-color brandColor
				opacity 1
				left 50%
				margin-left -(@width / 2)
				transform rotate(0deg)
				transition .2s top ease-in-out, .2s transform ease-in-out, .2s opacity ease-in-out
				&:nth-child(1)
					top 9px
				&:nth-child(2)
				&:nth-child(3)
					top 18px
				&:nth-child(4)
					top 27px
	>.container
		position static