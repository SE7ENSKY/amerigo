.header
	position fixed
	z-index 150
	top 0
	left 0
	right 0
	height 60px
	background-color #fff
	@media phone
		position fixed
		height 55px
	&:before
		content ''
		display none
		position absolute
		top 100%
		left 0
		right 0
		height 30px
		background-color greyColor
	&.active:before
		display block
		@media phone_tablet
			display none
	&__logo
		position absolute
		top 0
		left 50%
		width 80px
		transform translate(-50%, -10px)
		transition .3s transform ease-in-out
		&:hover
			@media desktop
				transform translate(-50%, 0)
	&__menu
		float right
		margin-top 18px
		@media phone_tablet
			display none
	>.container
		position static
	.mobile-menu
		position fixed
		top 12px
		right 20px
		display none
		z-index 101
		@media phone_tablet
			display block
		&__block
			width 40px
			height 30px
			position relative
			transform rotate(0deg)
			transition 0.5s ease-in-out
			cursor pointer
			&.active
				.mobile-menu__line:nth-child(1)
					top 13px
					width 0
					left 50%
				.mobile-menu__line:nth-child(2)
					transform rotate(45deg)
				.mobile-menu__line:nth-child(3)
					transform rotate(-45deg)
				.mobile-menu__line:nth-child(4)
					top 13px
					width 0
					left 50%
		&__line
			display block
			position absolute
			height 4px
			width 100%
			background red
			opacity 1
			left 0
			transform rotate(0deg)
			transition 0.25s ease-in-out
			&:nth-child(1)
				top 0
			&:nth-child(2)
			&:nth-child(3)
				top 13px
			&:nth-child(4)
				top 26px
	.mobile-submenu
		position absolute
		top 55px
		left 0
		width 100%
		background-color #fff
		overflow-y auto
		height 100vh
		content: 'viewport-units-buggyfill;height:100vh;';
		transform-origin 100% 0
		-webkit-overflow-scrolling touch
		display none
		@media phone_tablet
			display block
		&.active
			display block
		.nav
			&-menu
				list-style none
				margin 60px 0 0
				padding 0
				text-align center
				& li
					text-transform uppercase
					margin-bottom 30px
					&:last-child
						margin-bottom 0
				&__item-link
					font-size 20px
					font-weight 500
					text-decoration none
			&-sub-menu
				list-style none
				margin 0
				padding 0
				text-align center
				& li
					margin 0
					text-transform none
				&__item-link
					text-decoration none