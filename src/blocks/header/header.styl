.header
	position fixed
	z-index 150
	top 0
	left 0
	right 0
	height 60px
	background-color #fff
	@media phone
		position fixed
		height 55px
	&:before
		content ''
		display none
		position absolute
		top 100%
		left 0
		right 0
		height 30px
		background-color greyColor
	&.active:before
		display block
		@media phone_tablet
			display none
	&__logo
		position absolute
		top 0
		left 50%
		width 80px
		transform translate(-50%, -10px)
		transition .3s transform ease-in-out
		&:hover
			@media desktop
				transform translate(-50%, 0)
	&__menu
		float right
		margin-top 18px
		@media phone_tablet
			display none
	>.container
		position static
