.campus
	text-align center
	.no-touchevents &:hover
		.campus
			&__image:before
				opacity 1
			&__more
				opacity 1
				visibility visible
	&__link
		display block
		text-decoration none
	&__image
		position relative
		display block
		padding-bottom 75%
		background-color #f5f5f5
		background-size cover
		background-position center
		margin-bottom 15px
		&:before
			content ""
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			background-color rgba(228,62,48,.7)
			opacity 0
			transition .2s opacity ease-in-out
	&__more
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		opacity 0
		visibility hidden
		transition .2s opacity ease-in-out
		&:after
			content ""
			display inline-block
			vertical-align middle
			height 100%
			width 0
		&-label
			display inline-block
			vertical-align middle
			max-width 96%
			// font-family nobel
			font-size 16px
			color #fff
			letter-spacing 1pt
			text-transform uppercase
	&__caption
		display block
		height 90px
		overflow hidden
		margin-bottom 10px
	&__title
		display block
		font-family bodoni
		color brandColor
		font-size 18px
		overflow hidden
		@media tablet
			font-size 16px
	&__location
		display block
		color #666666
		font-family garamondPro
		font-style italic
		font-size 16px
		white-space nowrap
		overflow hidden
		text-overflow ellipsis