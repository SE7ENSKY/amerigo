.feedback
	overflow hidden
	&__header
		text-align center
	&__title
		margin-bottom 10px
		font-size 36px
		color brandColor
	&__text
		margin-bottom 50px
		font-size 16px
		line-height 1.4
		@media phone
			br
				display none
	&__form
		position relative
		z-index 2
		width 340px
		margin 0 auto
		@media phone
			width auto
			max-width 340px
		&-footer
			margin-top 35px
			text-align center
	&__stamp
		float right
		margin-top -110px
		@media tablet
			margin-top -70px
		@media phone
			margin-top -10px
			
	.gform
		&_wrapper
			position relative
			z-index 2
			margin 0 auto
			width 340px
			&.disabled
				opacity .5
				.erorr-input
				.gfield_error input
				.gfield_error textarea
						border-color #777 !important
			@media phone
				width auto
				max-width 340px
			.validation_error
				display none
			.gform
				&_heading
					width auto
					margin 0 0 50px
					text-align center
				&_title
					margin 0 0 10px
					font-size 36px
					font-family bodoni
					font-weight normal
					line-height 1.2
					color brandColor
				&_description
					display block
					margin-bottom 50px
					font-size 16px
					line-height 1.4
					font-weight 100
				&_fields
					margin 0 -15px !important
					clearfix()
					.gfield
						clear none
						display inline-block
						width 49%
						vertical-align top
						padding 0 15px
						margin 0 0 20px
						@media phone
							display block
							width auto
						&:last-child
							display block
							width auto
							clear both
							padding-top 10px
							.gfield_label
								top 20px
								left 25px
							&.has-value .gfield_label
								top -5px
								left 15px
								
				&_footer
					padding 0
					margin 15px 0 0
					text-align center
				&_button
					display inline-block !important
					vertical-align middle
					padding 8px 30px
					border 1px solid #000
					font-family mainFont
					font-size 14px !important
					line-height 1.3
					text-transform uppercase
					color brandColor
					font-weight normal
					text-align center
					white-space nowrap
					background #fff
					cursor pointer
					outline none
					user-select none
					transition .2s background ease-in-out, .15s color ease-in-out, .15s box-shadow ease-in-out, .15s border-color ease-in-out
					&:hover
					&:active
						background brandColor
						color #fff
						border-color brandColor
					&:active
						box-shadow 0 3px 7px rgba(0,0,0,0.25) inset
					&:focus
						outline none
			.gfield
				position relative
				&.phone-input
					.gfield_label
						display none !important
					input
						padding-left 44px !important
				&.has-value
					.gfield
						&_label
							top -8px
							font-size 10px
						&_required
							font-size 12px
				&.gfield_error
					background none
					border 0 none
					margin 0 0 20px !important
					&.gfield_contains_required
						margin 0 0 20px !important
					.gfield_label
						color #939598
					input
					textarea
						border-color brandColor
					
				.validation_message
					display none !important
				&_required
					position relative
					top 0
					margin-left 2px
					font-size 14px
					line-height 0
					vertical-align baseline
					color #939598
					transition font-size .1s ease-in-out
				&_label
					position absolute
					top 12px
					left 17px
					margin 0 !important
					display block !important
					font-family mainFont
					font-size 12px
					color #939598
					font-weight 100 !important
					text-transform uppercase
					transition top .1s ease-in-out, left .1s ease-in-out, font-size .1s ease-in-out, color .1s ease-in-out
			.ginput_container
				margin 0 !important
				input
					position relative
					z-index 2
					display block
					width 100% !important
					height 36px
					padding 10px 0 5px !important
					font-family mainFont !important
					font-size 13px !important
					line-height 1.3
					color #252525
					border-width 0 0 1px !important
					border-style solid
					border-color #000
					border-radius 0
					background none
					transition border-color .3s ease
					outline none
					-webkit-appearance none
					&:focus
						border-color greenColor
					&.erorr-input
						border-color brandColor
			textarea
				display block
				width 100% !important
				height 80px !important
				border 1px solid #000
				border-radius 0
				background none
				padding 10px
				font-family mainFont
				font-size 13px
				line-height 1.3
				color #252525
				&:focus
					outline none
	
			form
				position relative
				transition opacity .2s ease-in-out	
				&.submitting
					opacity .5
					&:after
						position absolute
						top 0
						left 0
						right 0
						bottom 0
					&:before
						content ""
						position absolute
						left 50%
						top 50%
						width 80px
						height @width
						margin-left (@width / (-2))
						margin-top (@height / (-2))
						border-radius 100%
						background-color brandColor
						animation scaleout 1s infinite ease-in-out

@keyframes scaleout
	0% 
		transform scale(0.0)
	100%
		transform scale(1.0)
		opacity 0